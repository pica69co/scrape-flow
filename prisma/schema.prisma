// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // env("DATABASE_URL")
}

model Workflow {
  id          String   @id @default(cuid())
  name        String
  userId      String
  description String?
  
  definition  String
  status      String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

 executions WorkflowExecution[]

  // User can not have multiple workflows with the same name
  @@unique([userId, name])
}

model WorkflowExecution {
  id          String   @id @default(cuid())
  workflowId  String
  userId      String
  trigger     String
  status      String
  createdAt   DateTime @default(now())
  startedAt   DateTime?
  completedAt DateTime?
  
  // WorkflowExecution can have multiple ExecutionPhases
  phases ExecutionPhase[]

  // WorkflowExecution belongs to a Workflow
  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

}

model ExecutionPhase {
  id          String   @id @default(cuid())
  userId      String
  status      String
  number      Int
  node      String
  name        String

  startedAt   DateTime?
  completedAt DateTime?
  
  inputs   String?
  outputs  String?

  creditCost Int?
  creditsConsumed Int?
  
  workflowExecutionId String

  // ExecutionPhase belongs to a WorkflowExecution
  execution WorkflowExecution @relation(fields: [workflowExecutionId], references: [id], onDelete: Cascade)
}
 